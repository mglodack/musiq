@model DataAccessLayer.Models.AccountModel
@{
    ViewBag.Title = "Home Page";
}
<body id="login_page">
    <div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <header>
                    <h1 class="home-title">urMusiQ</h1>
                </header>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-centered margintop">
                
                @using (Html.BeginForm("Verify", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true)
                    <input ng-init="login = true" value="{{login}}" id="login" name="login" hidden />
                    <div ng-hide="login" class="form-group">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control-login site-font login-width", placeholder = "First Name" })
                    </div>
                    <div ng-hide="login" class="form-group">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control-login site-font login-width", placeholder = "Last Name" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control-login site-font login-width", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control-login site-font login-width", placeholder = "Password" })
                    </div>
                    <div ng-hide="login" class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control-login site-font login-width", placeholder = "Confirm Password" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                    <div class="form-group login-width" style="max-width:260px; margin:0 auto;">
                        <span>Don't have an account?</span>
                        <a ng-click="login = !login" id="register_link" class="pull-right" style="margin-left: 2px; margin-right: 6px;" href="#">Register</a>
                    </div>
                }
            </div>
        </div>
    </div>
